{
    "compileOnSave": true,
    "compilerOptions": {
      "target": "es6",
      "module": "commonjs",
      "allowJs": true,
      "jsx": "react",
      "outDir": "./dist",
      "rootDir": "./",
      "isolatedModules": true,
      "strict": true,
      "moduleResolution": "node",
      "baseUrl": "./src",
      "typeRoots": ["node_modules/@types", "src/typings"],
      "esModuleInterop": true,
      "paths": {
        "App": ["src/App"],
        "Pages/*": ["src/Pages/*"],
    }
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
  }